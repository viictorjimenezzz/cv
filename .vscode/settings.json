{
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "/Library/TeX/texbin/latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "%DOC%"
      ],
      "env": {
        "PATH": "/Library/TeX/texbin:/usr/bin:/bin:/usr/sbin:/sbin:$PATH"
      }
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (custom)",
      "tools": ["latexmk"]
    }
  ]
}
